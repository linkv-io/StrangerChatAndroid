<?xml version="1.0" encoding="utf-8"?>
<com.linkv.strangechatdemo.widget.StaticGiftLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_selector_gift_item"
    android:layout_centerVertical="true"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_gift_pic"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_room_gift_info"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:paddingEnd="65dp">

        <com.linkv.strangechatdemo.widget.CircleImageView
            android:id="@+id/iv_gift_sender_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/avatar6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_gift_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Snow"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="送了棒棒糖"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_gift_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-60dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/coffee3x" />

    <TextView
        android:id="@+id/tv_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:text="X2"
        android:textColor="#FDDD00"
        android:textSize="28sp"
        android:textStyle="bold" />

</com.linkv.strangechatdemo.widget.StaticGiftLayout>


